dnl Process this file with autoconf to produce a configure script.
AC_INIT(src/xyz.cpp)

dnl AM_CONFIG_HEADER(config.h)
dnl AM_INIT_AUTOMAKE([openbabel], version)
AC_CANONICAL_HOST
top_builddir=`pwd`
AC_SUBST(top_builddir)
openbabel_version=1.100.1
AC_SUBST(openbabel_version)

dnl Checks for programs.
AC_PROG_CC
AC_PROG_CXX
AC_PROG_CXXCPP
dnl AM_PROG_LIBTOOL
AC_PROG_INSTALL
AC_PROG_RANLIB
AC_PATH_PROG(AR, ar, ar, [$PATH:/usr/ccs/bin])

AC_ARG_ENABLE(doxygen, 
[  --enable-doxygen        build library documentation using doxygen],
dnl Check if the documentation tool doxygen is available. If it is not,
dnl the configure script will print an error message with an url where
dnl to find it
	[AC_CHECK_PROG(DOCTOOL, doxygen, doxygen, no)]
)

dnl Complain about missing documentation tool doxygen.
if test "$DOCTOOL" == "no"; then
AC_MSG_ERROR(Cannot find doxygen. 
	Have a look at http://www.doxygen.org/)
fi

AC_LANG_CPLUSPLUS
dnl Checks for libraries.
AC_CHECK_LIB(m, asin, , exit)

dnl Checks for header files.
AC_CHECK_HEADER(sys/time.h,, exit)
AC_CHECK_HEADER(unistd.h,, exit)
AC_CHECK_HEADER(stdlib.h,, exit)
AC_CHECK_HEADER(stdio.h,, exit)
dnl AC_CHECK_HEADER(conio.h,, exit)
AC_CHECK_HEADER(string.h,, exit)
AC_CHECK_HEADER(strstream.h,, exit)
AC_CHECK_HEADER(iostream.h,, exit)
AC_CHECK_HEADER(fstream.h,, exit)
AC_CHECK_HEADER(math.h,, exit)
AC_CHECK_HEADER(time.h,, exit)
AC_CHECK_HEADER(ctype.h,, exit) 
AC_CHECK_HEADER(algorithm,, exit)
AC_CHECK_HEADER(vector,, exit)
AC_CHECK_HEADER(map,, exit)
AC_CHECK_HEADER(list,, exit)
AC_CHECK_HEADER(strstream,, exit)
AC_CHECK_HEADER(iostream,, exit)
AC_CHECK_HEADER(fstream,, exit)
AC_CHECK_HEADER(deque,, exit)

dnl Checks for typedefs, structures, and compiler characteristics.
AC_C_CONST
AC_C_INLINE

dnl Checks for library functions.

AC_OUTPUT(Makefile src/Makefile src/math/Makefile test/Makefile src/version.h)
echo timestamp > stamp.h
